{
    "description": "Caps Lock + g/b/d/t/w to open or switch to applications",
    "manipulators": [
        {
            "from": {
                "key_code": "g",
                "modifiers": {
                    "mandatory": ["left_control", "left_shift", "left_option", "left_command"]
                }
            },
            "to": [
                {
                    "shell_command": "open -a 'Google Chrome'"
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "b",
                "modifiers": {
                    "mandatory": ["left_control", "left_shift", "left_option", "left_command"]
                }
            },
            "to": [
                {
                    "shell_command": "open -a 'Brave Browser'"
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "d",
                "modifiers": {
                    "mandatory": ["left_control", "left_shift", "left_option", "left_command"]
                }
            },
            "to": [
                {
                    "shell_command": "open -a 'Cursor'"
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "t",
                "modifiers": {
                    "mandatory": ["left_control", "left_shift", "left_option", "left_command"]
                }
            },
            "to": [
                {
                    "shell_command": "open -a 'Warp'"
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "w",
                "modifiers": {
                    "mandatory": ["left_control", "left_shift", "left_option", "left_command"]
                }
            },
            "to": [
                {
                    "shell_command": "open -a 'WhatsApp Web'"
                }
            ],
            "type": "basic",
            "conditions": [
                {
                    "type": "variable_if",
                    "name": "whatsapp_pressed",
                    "value": 1
                }
            ]
        },
        {
            "from": {
                "key_code": "w",
                "modifiers": {
                    "mandatory": ["left_control", "left_shift", "left_option", "left_command"]
                }
            },
            "to": [
                {
                    "set_variable": {
                        "name": "whatsapp_pressed",
                        "value": 1
                    }
                },
                {
                    "shell_command": "open -a 'WhatsApp'"
                }
            ],
            "to_delayed_action": {
                "to_if_invoked": [
                    {
                        "set_variable": {
                            "name": "whatsapp_pressed",
                            "value": 0
                        }
                    }
                ],
                "to_if_canceled": [
                    {
                        "set_variable": {
                            "name": "whatsapp_pressed",
                            "value": 0
                        }
                    }
                ]
            },
            "type": "basic",
            "parameters": {
                "basic.to_delayed_action_delay_milliseconds": 500
            }
        }
    ]
}
